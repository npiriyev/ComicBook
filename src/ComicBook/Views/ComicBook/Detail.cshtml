@model ComicBook.Models.ComicBooks
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.DisplayText;
    
}

<!DOCTYPE html>


<h1>@Model.SeriesTitle</h1>
<h2>Issue Number #@Model.IssueNumber</h2>
<h3>Description:</h3>
<div>
    @Html.Raw(Model.DescriptionHtml)
</div>
@if (Model.Artists.Length > 0)
{
    <h3>Artists:</h3>
    <ul>
        @foreach (var artist in Model.Artists)
        {
        <li>@artist.Role : @artist.Name</li>
        }
    </ul>

}

